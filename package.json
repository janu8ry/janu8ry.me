{
    "name": "somix.studio",
    "version": "1.0.0",
    "private": true,
    "license": "GPL-3",
    "dependencies": {
        "@chakra-ui/react": "^1.0.0",
        "@emotion/react": "^11.0.0",
        "@emotion/styled": "^11.0.0",
        "@testing-library/jest-dom": "^5.9.0",
        "@testing-library/react": "^10.2.1",
        "@testing-library/user-event": "^12.0.2",
        "framer-motion": "^4.0.0",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-icons": "^3.0.0",
        "react-router-dom": "^5.2.0",
        "react-scripts": "4.0.3",
        "web-vitals": "^0.2.2"
    },
    "scripts": {
        "start": "snowpack dev",
        "build": "node --max_old_space_size=4096 ./node_modules/snowpack/index.bin.js build",
        "format": "prettier --check --trailing-comma=none --tab-width 4 --print-width 120 --single-quote \"src/**/*.{js,jsx,ts,tsx}\""
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "eslint --fix",
            "prettier --write --trailing-comma=all --tab-width 4 --print-width 120 --single-quote"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@snowpack/plugin-react-refresh": "^2.4.2",
        "@snowpack/plugin-webpack": "^2.3.1",
        "eslint": "^7.23.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-plugin-react": "^7.23.1",
        "husky": "^5.2.0",
        "lint-staged": "^10.5.4",
        "prettier": "^2.2.1",
        "snowpack": "^3.2.2"
    }
}
